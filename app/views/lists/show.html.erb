<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @list.photo.url %>);">
    <h1><%= @list.name %></h1>
    <%= link_to "Add bookmark", new_list_bookmark_path(@list), class: "btn btn-flat" %>
</div>
<%= link_to "Back to all lists", lists_path %>

  <ul>
  <div class='container'>
    <% @bookmarks.each do |bookmark| %>
      <li>
        <img src=<%= bookmark.movie.poster_url %> />
        <p><%= bookmark.movie.title %></p>
        <p class='comment'><%= bookmark.comment %><p>
        <%= button_to "x", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-secondary btn-sm" %>
      </li>
    <% end %>
    </div>
  </ul>
