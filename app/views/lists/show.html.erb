<%= link_to "Back to all lists", lists_path %>
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @list.image_url %>);">
    <h1><%= @list.name %></h1>
    <%= link_to "Add bookmark", new_list_bookmark_path(@list), class: "btn btn-flat" %>
</div>
<ul>
  <% @bookmarks.each do |bookmark| %>
      <li><%= bookmark.movie.title %><%= bookmark.comment %><%= button_to "-", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-secondary btn-sm" %></li>
    <% end %>
</ul>
